<%= render :partial => '/admin/config/sub_header'%>

<h1>Tax Statuses</h1>

<div class=' pretty_table'>
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Name</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @tax_statuses.each do |tax_status| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to tax_status.name, admin_config_tax_status_path(tax_status) %></td>
      <td><%= link_to 'Edit', edit_admin_config_tax_status_path(tax_status) %></td>
      <td><%= link_to 'Delete', admin_config_tax_status_path(tax_status), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />

<%= link_to 'New Tax status', new_admin_config_tax_status_path, :class => 'button' %>
