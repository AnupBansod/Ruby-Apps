<div id="admin-product-properties"
          style='float:left;'
          class='span-14 <%= product_property_form.object.new_record? ? 'new_fields' : 'fields' %>  '>
  <p class='field'>
    <div style='float:right;'>
      <%= remove_child_link('remove', product_property_form) %>
    </div>
    Property:     <%= product_property_form.select       :property_id, all_properties %><br/>
