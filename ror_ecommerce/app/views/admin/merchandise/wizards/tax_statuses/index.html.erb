<%= render :partial => '/admin/merchandise/wizards/sub_header'%>
<% if  @tax_statuses.empty? %>
  <h2>New Tax Status</h2>
<% else %>
  <h2>Pick a Tax Status</h2>
<% end %>

<div id='shopping_addresses_selections' class='span-18 last'>
  <% @tax_statuses.each do |tax_status| %>
    <div class='span-8 box <%= cycle( '', 'last') %> <%= 'selected' if selected?(tax_status.id) %> '>
      <label><%= tax_status.name %></label><br/>
      <%= button_to 'Use', admin_merchandise_wizards_tax_status_path(tax_status),
                    :class => "button spade inline-block ",
                    :method => :put %>
    </div>
  <% end %>
</div>
<hr style='color:#aac'/>
<br />

<%= form_for @tax_status, :url => admin_merchandise_wizards_tax_statuses_path do |tax_status_form| %>
  <%= render :partial =>  'form', :locals => {:f => tax_status_form}  %>
<% end %>
