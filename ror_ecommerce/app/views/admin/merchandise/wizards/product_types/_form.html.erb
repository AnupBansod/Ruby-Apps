<fieldset id="admin-product_type-names">
  <div class='span-10 clear'>
    <div class='span-3'>
      <%= form.label :name %>
    </div>
    <div class='span-6 last'>
      <%= form.text_field :name %>
    </div>
    <div class='span-6 last'>
      Parent: <%= form.select :parent_id,
                      nested_set_options(ProductType, ProductType.new) {|i, level| "#{'-' * level} #{i.name}" },
                      { :include_blank => true } %>
    </div>
  </div>
</fieldset>
