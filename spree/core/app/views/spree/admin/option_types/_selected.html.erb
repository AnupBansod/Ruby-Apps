<table class="index">
  <tr data-hook="selected_head">
    <th><%= t(:name) %></th>
    <th><%= t(:presentation) %></th>
    <th>&nbsp;</th>
  </tr>
  <% @option_types.each do |option_type| %>
    <tr id="<%= spree_dom_id(option_type) %>" data-hook="selected_row">
      <td><%= option_type.name %></td>
      <td><%= option_type.presentation %></td>
      <td class="actions">
      <%= link_to_delete option_type, :url => remove_admin_product_option_type_url(@product, option_type), :name => icon('delete') + ' ' + t(:remove) %>
      </td>
    </tr>
  <% end %>
  <% if @option_types.empty? %>
   <tr data-hook="selected_none"><td colspan="3"><%= t(:none) %></td></tr>
  <% end %>
</table>

<div id="option-types" data-hook></div>
<% if @product.variants.empty? %>
  <span id="new_opt_link" data-hook="links">
    <%= link_to_with_icon 'add', t(:add_option_type), available_admin_product_option_types_url(@product), :remote => :true %>
  </span>
<% end %>
